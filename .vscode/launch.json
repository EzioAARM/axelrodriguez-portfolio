{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug client",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3000", // Adjust port if necessary
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true
        },
        {
            "name": "Next.js: debug server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "port": 9229, // Or the port Next.js uses for internal router debugger (e.g., 9230 for Next.js 15+)
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Next.js: debug full stack",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal",
            "serverReadyAction": {
                "action": "debugWithChrome", // Or debugWithEdge if using Edge
                "pattern": "started server on",
                "uriFormat": "http://localhost:%p",
                "args": "3000" // Adjust port if necessary
            },
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Next.js: debug compound",
            "configurations": ["Next.js: debug server", "Next.js: debug client"]
        }
    ]
}
